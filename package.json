  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "firebase": "^12.7.0",
    "leaflet": "^1.9.4",
    "tweetnacl": "^1.0.3",
    "dompurify": "^3.0.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
