{
  "name": "datarchi",
  "version": "1.0.0",
  "description": "DatArchi - Professional Archaeological Data Management Platform",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "serve": "vite preview --port 3000",
