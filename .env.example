# DatArchi - Environment Configuration Template
# Copy this to .env.production and fill in your values

# ===========================================
# Firebase Configuration
# ===========================================
VITE_FIREBASE_API_KEY=YOUR_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=YOUR_AUTH_DOMAIN
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_APP_ID
VITE_FIREBASE_MEASUREMENT_ID=YOUR_MEASUREMENT_ID

# ===========================================
# Site Configuration
# ===========================================
VITE_SITE_URL=https://datarchi.example.com
VITE_SITE_NAME=DatArchi
VITE_SITE_DESCRIPTION=Professional Archaeological Data Management Platform
VITE_SITE_LOGO=/images/logo.png
VITE_SITE_FAVICON=/favicon.ico

# ===========================================
# API Configuration
# ===========================================
VITE_API_BASE_URL=https://datarchi.example.com/api
VITE_API_TIMEOUT=30000

# ===========================================
# Analytics
# ===========================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456

# ===========================================
# Features
# ===========================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_OFFLINE_MODE=true

# ===========================================
# Security
# ===========================================
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_CORS_ENABLED=true

# ===========================================
# Database
# ===========================================
VITE_DB_NAME=datarchi
VITE_DB_REGION=eu
VITE_DB_BACKUP_ENABLED=true

# ===========================================
# Email Configuration
# ===========================================
VITE_EMAIL_FROM=noreply@datarchi.example.com
VITE_EMAIL_SUPPORT=support@datarchi.example.com
VITE_SMTP_HOST=smtp.example.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=true

# ===========================================
# Logging
# ===========================================
VITE_LOG_LEVEL=info
VITE_LOG_FORMAT=json
VITE_LOG_RETENTION=30

# ===========================================
# Performance
# ===========================================
VITE_CACHE_TTL=3600
VITE_IMAGE_OPTIMIZATION=true
VITE_CODE_SPLITTING=true
VITE_MINIFY=true

# ===========================================
# Development/Admin
# ===========================================
VITE_ADMIN_EMAIL=admin@datarchi.example.com
VITE_DEBUG_MODE=false
VITE_VERBOSE_LOGGING=false
